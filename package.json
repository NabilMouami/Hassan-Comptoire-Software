{
  "name": "hassan-comptoire",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.yourcompany.hassancomptoire",
    "productName": "Hassan-Comptoire",
    "asar": true,
    "asarUnpack": [
      "backend/**"
    ],
    "forceCodeSigning": false,
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "main.js",
      "backend/**",
      "backend/.env",
      "react-build/**",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  }
}
